.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #f5f5f5; /* 背景颜色 */
}

.map {
  width: 100%;
  height: 300px; /* 地图高度 */
  border: 1px solid #ccc; /* 边框样式 */
}

.picker {
  margin: 10px 0;
  width: 100%; /* 选择器宽度 */
  text-align: center;
  background-color: #ffffff; /* 选择器背景颜色 */
  border: 1px solid #ccc; /* 边框样式 */
  padding: 10px 0; /* 内边距 */
}

.station-picker {
  margin-top: 10px;
  color: #333; /* 字体颜色 */
  font-size: 16px; /* 字体大小 */
}

button {
  margin-top: 20px;
  padding: 10px 20px; /* 按钮内边距 */
  background-color: #007aff; /* 按钮背景颜色 */
  color: white; /* 字体颜色 */
  border: none; /* 无边框 */
  border-radius: 5px; /* 圆角 */
  cursor: pointer; /* 鼠标悬浮时为指针 */
}

button:hover {
  background-color: #005bb5; /* 鼠标悬浮时的背景颜色 */
}

view {
  margin: 5px 0; /* 各个子视图之间的间距 */
}

image {
  width: 50px; /* 图片宽度 */
  height: 50px; /* 图片高度 */
  margin-right: 10px; /* 图片与文本之间的间距 */
  display: inline-block; /* 使图片和文本在同一行显示 */
}

text {
  font-size: 14px; /* 文本字体大小 */
  color: #666; /* 文本颜色 */
}